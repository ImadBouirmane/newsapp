import 'package:dio/dio.dart';

class NewsApi {
  static const String apiKey = 'a73747d66e3842cc8330da31f7c4c49c';
  static const String apiUrl = 'https://newsapi.org/v2/';

  final Dio dio = Dio(BaseOptions(baseUrl: apiUrl, queryParameters: {'apiKey': apiKey}));

  Future<List<Article>> searchArticles(String query) async {
    final response = await dio.get('/everything', queryParameters: {'q': query});

    final articles = <Article>[];
    for (final articleJson in response.data['articles']) {
      articles.add(Article.fromJson(articleJson));
    }

    return articles;
  }
}

class Article {
  final String title;
  final String author;
  final String source;
  final String thumbnail;
  final DateTime publishedDate;
  final String content;
  final String url;

  Article({
    required this.title,
    required this.author,
    required this.source,
    required this.thumbnail,
    required this.publishedDate,
    required this.content,
    required this.url,
  });

  factory Article.fromJson(Map<String, dynamic> json) {
    return Article(
      title: json['title'],
      author: json['author'] ?? '',
      source: json['source']['name'],
      thumbnail: json['urlToImage'] ?? '',
      publishedDate: DateTime.parse(json['publishedAt']),
      content: json['content'] ?? '',
      url: json['url'],
    );
  }
}
